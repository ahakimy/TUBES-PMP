{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/jadwal_dokter", // PASTIKAN PATH INI SESUAI DENGAN TARGET DI MAKEFILE
            "args": [],
            "stopAtEntry": false, // Set ke true jika Anda ingin program berhenti di awal main()
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Set ke false jika ingin output di Integrated Terminal VS Code
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build (Makefile)", // Ini penting: Pastikan program di-build sebelum debugging
            "miDebuggerPath": "/usr/bin/gdb" // Sesuaikan path GDB Anda (misal: "gdb.exe" di Windows, atau "gdb" jika sudah di PATH)
        }
    ]
}